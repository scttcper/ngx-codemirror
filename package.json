{
  "name": "@ctrl/ngx-codemirror",
  "version": "1.3.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ts-node build.ts",
    "publish": "cd dist && npm publish --access public",
    "test": "ng test --watch=false --browsers=ChromeCI",
    "test:ci": "ng test --watch=false --code-coverage --no-progress --browsers=ChromeCI",
    "lint": "ng lint ngx-codemirror --type-check -t stylish",
    "lint:fix": "ng lint ngx-codemirror --fix --type-check -t stylish",
    "e2e": "ng e2e",
    "bundlesize": "npx bundlesize",
    "ghpages": "ng build --prod --no-progress --baseHref='/ngx-codemirror/'",
    "travis-deploy-once": "travis-deploy-once",
    "commit": "git-cz",
    "semantic-release": "cd dist && semantic-release"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "6.0.9",
    "@angular/compiler": "6.0.9",
    "@angular/core": "6.0.9",
    "@angular/forms": "6.0.9",
    "@angular/http": "6.0.9",
    "@angular/platform-browser": "6.0.9",
    "@angular/platform-browser-dynamic": "6.0.9",
    "@ctrl/ngx-github-buttons": "2.0.3",
    "bootstrap": "4.1.2",
    "codemirror": "5.39.2",
    "core-js": "2.5.7",
    "rxjs": "6.2.2",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular/cli": "6.0.8",
    "@angular/compiler-cli": "6.0.9",
    "@angular/language-service": "6.0.9",
    "@types/codemirror": "0.0.58",
    "@types/fs-extra": "5.0.4",
    "@types/jasmine": "2.8.8",
    "@types/jasminewd2": "2.0.3",
    "@types/node": "10.5.2",
    "codelyzer": "4.4.2",
    "commitizen": "2.10.1",
    "cz-conventional-changelog": "2.1.0",
    "fs-extra": "6.0.1",
    "jasmine-core": "2.99.1",
    "karma": "2.0.4",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "1.4.3",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "0.2.2",
    "ng-packagr": "4.0.0-rc.3",
    "rimraf": "2.6.2",
    "semantic-release": "15.6.6",
    "travis-deploy-once": "5.0.1",
    "ts-node": "7.0.0",
    "tslint": "5.10.0",
    "typescript": "2.7.2",
    "@angular-devkit/build-angular": "0.6.8"
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bundlesize": [
    {
      "path": "./dist/bundles/ctrl-ngx-codemirror.umd.min.js",
      "maxSize": "2 kB"
    },
    {
      "path": "./dist/esm2015/ctrl-ngx-codemirror.js",
      "maxSize": "3 kB"
    },
    {
      "path": "./dist/esm5/ctrl-ngx-codemirror.js",
      "maxSize": "2 kB"
    }
  ]
}
